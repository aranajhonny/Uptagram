<%= render 'shared/errors', obj: @photo %>
<div class="row">
  <div class="well col-md-6 col-md-offset-3">
 <div id="showfile" class="image-preview">
 <img src=""  id="img" style="display: none;">
</div>
   <%= form_for @photo, html: {multipart: true}  do |f| %>

            <div class="btn-group">
                
                <span class="input-group-btn row">
                    <span class="mui-btn mui-btn--primary btn-file col-xs-offset-2 col-xs-4">
                        Tomar&hellip;  <%= f.file_field :image, id:"imagefile" %>
                    </span>

             <%= f.submit 'Enviar', class: "mui-btn mui-btn--danger col-xs-4"%>

                </span>
            </div><br>
            <div class="row">
            <!-- Single button -->
            <div class="mui-dropdown col-md-offset-4 col-xs-offset-4">
              <button type="button" class="mui-btn mui-btn--primary" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Producto<span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                 <% @categories.each do |category| %>
                            <li><a><%= check_box_tag "categories[]", category.id %><%=category.name%></a> </li>     
                      <%end%> 
              </ul>
            </div>
            </div>
            
              

     <% end %>
        </div>
</div>


